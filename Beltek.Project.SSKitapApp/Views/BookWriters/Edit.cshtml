@model Beltek.Project.SSKitapApp.Models.BookWriters

@{
    ViewData["Title"] = "SSKİTAP";
}


<h1>Yazarlar</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label>Yazar Adı</label>
                <input asp-for="WriterName" class="form-control" />
                <span asp-validation-for="WriterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Yazar Soyadı</label>
                <input asp-for="WriterSurname" class="form-control" />
                <span asp-validation-for="WriterSurname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Doğum Tarihi</label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
