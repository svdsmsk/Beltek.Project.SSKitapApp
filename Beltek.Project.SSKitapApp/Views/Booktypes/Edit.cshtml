@model Beltek.Project.SSKitapApp.Models.Booktypes

@{
    ViewData["Title"] = "SSKİTAP";
}

<h1>Kitap Türleri</h1
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label>Kitap Türleri</label>
                <input asp-for="BookType" class="form-control" />
                <span asp-validation-for="BookType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Lİsteye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
